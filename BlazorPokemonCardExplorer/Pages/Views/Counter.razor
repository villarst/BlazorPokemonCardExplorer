@page "/counter"
@inherits ReactiveUI.Blazor.ReactiveComponentBase<BlazorPokemonCardExplorer.Pages.ViewModels.CounterViewModel>
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @ViewModel.CurrentCount</p>

<button class="btn btn-primary" @onclick="ViewModel.IncrementCount">Increment</button>
<button class="btn btn-primary" @onclick="ViewModel.DecrementCount">Decrement</button>
<button class="btn btn-primary" @onclick="ViewModel.ResetCount">Reset</button>